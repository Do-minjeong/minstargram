SELECT COUNT(DECODE(fr.member_no,21,1)) as follow_cnt,
		COUNT(DECODE(tg_member_no, 21,1)) as follower_cnt
		, CASE
		WHEN COUNT(DECODE(fr.member_no,4,1)) = 0 AND
		COUNT(DECODE(tg_member_no,4,1)) = 0
		THEN 0
		WHEN COUNT(DECODE(fr.member_no,4,1)) = 1 AND
		COUNT(DECODE(tg_member_no,4,1)) = 0
		THEN 1
		WHEN COUNT(DECODE(tg_member_no,4,1)) = 1 AND
		COUNT(DECODE(fr.member_no,4,1)) = 0
		THEN 2
		WHEN COUNT(DECODE(fr.member_no,4,1)) = 1 AND
		COUNT(DECODE(tg_member_no,4,1)) = 1
		THEN 3
		END relationship
		FROM follow_relationship fr
		WHERE member_no = 21 OR tg_member_no = 21
		
		
		
		
